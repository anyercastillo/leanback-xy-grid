<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:lb="http://schemas.android.com/tools"
    android:background="#000000"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include
        android:id="@+id/xy_card"
        layout="@layout/fragment_xy_card"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/xy_before_y"
        layout="@layout/fragment_xy_item_y"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/xy_card"
        app:layout_constraintEnd_toEndOf="@+id/xy_card"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/xy_before_x" />

    <include
        android:id="@+id/xy_before_x"
        layout="@layout/fragment_xy_item_x"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/xy_card"
        app:layout_constraintEnd_toStartOf="@+id/xy_card"
        app:layout_constraintTop_toTopOf="@+id/xy_card"
        app:layout_constraintVertical_bias="0.493" />

    <androidx.leanback.widget.HorizontalGridView
        android:id="@+id/xy_after_x"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintBottom_toBottomOf="@+id/xy_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/xy_card"
        app:layout_constraintTop_toTopOf="@+id/xy_card" />

    <androidx.leanback.widget.VerticalGridView
        android:id="@+id/xy_after_y"
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/xy_card"
        app:layout_constraintTop_toBottomOf="@+id/xy_card" />


    <!-- For debug only -->
    <include
        android:visibility="gone"
        android:id="@+id/xy_card2"
        layout="@layout/fragment_xy_card2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="460dp"
        android:layout_marginTop="216dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>